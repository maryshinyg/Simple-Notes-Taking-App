@model IEnumerable<NotesApp.Models.Note>

@{
    ViewData["Title"] = "Index";
}

<h1>Hey there! Having a good day?</h1>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">📒 My Notes</h2>
        <a class="btn btn-success rounded-pill px-4" asp-action="Create">➕ New Note</a>
    </div>

    <div class="row">
        @foreach (var note in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title text-dark">@note.Title</h5>
                        <p class="card-text text-muted text-truncate">@note.Content</p>
                        <div class="d-flex justify-content-between mt-3">
                            <a asp-action="Details" asp-route-id="@note.Id" class="btn btn-info btn-sm">👀 View</a>
                            <a asp-action="Edit" asp-route-id="@note.Id" class="btn btn-warning btn-sm">✏️ Edit</a>
                            <a asp-action="Delete" asp-route-id="@note.Id" class="btn btn-danger btn-sm">🗑 Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


